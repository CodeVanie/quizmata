{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    } 
  },
  "include": ["src/**/*.ts"], 
  "exclude": ["node_modules"],
  "references": [
    { "path": "../shared" }
  ]
}
