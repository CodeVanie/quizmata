{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
  },
  "references": [
    { "path": "../shared" }
  ]
}